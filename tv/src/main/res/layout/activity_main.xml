<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/fragmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:nextFocusRight="@id/top_menu"
        />

    <FrameLayout
        android:id="@+id/top_menu"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:nextFocusDown="@id/fragmentView"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/user_page"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="50dp"
                android:focusable="true"
                android:background="@drawable/menu_effect"
                android:drawable="@drawable/baseline_account" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/menu_effect"
                android:textColor="@color/text_selector"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Home" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/anime_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_effect"
                android:textColor="@color/text_selector"
                android:focusable="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="16dp"
                android:text="Anime"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/drama_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_effect"
                android:textColor="@color/text_selector"
                android:focusable="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="16dp"
                android:text="Drama" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_effect"
                android:textColor="@color/text_selector"
                android:focusable="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="16dp"
                android:text="Live TV" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/movie_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_effect"
                android:textColor="@color/text_selector"
                android:focusable="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="16dp"
                android:text="Movies" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/search_page"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:focusable="true"
                android:background="@drawable/menu_effect"
                android:layout_marginStart="16dp"
                android:icon="@drawable/baseline_search"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_page"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="150dp"
                android:icon="@drawable/baseline_settings"
                android:focusable="true"
                android:background="@drawable/menu_effect"
                />
        </LinearLayout>
    </FrameLayout>
</merge>